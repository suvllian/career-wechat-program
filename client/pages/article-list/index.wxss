#body {
  width: 100%;
  min-height: 600rpx;
  padding: 50rpx 0;
  
}

.article-box {
  height: auto;
  width: 94%;
  margin: 20rpx auto 30rpx;
  border-radius: 5rpx;
  box-shadow: 1px 3px 9px #ccc;
  background-color: #fff;
}

.article-inner {
  padding: 30rpx;
}

.title {
  font-size: 28rpx;
}

.date {
  font-size: 40rpx;
  font-weight: 500;
  margin-left: 24rpx;
}

.add-btn {
  position: fixed;
  bottom: 20rpx;
  right: 28rpx;
  border-radius: 50%;
  
}

.add-btn image{
  width:80rpx;
  height:80rpx;
  box-shadow: 0px 10px 80px 0px #999999;
  border-radius: 50%;
}
.nav-bottom{
  background-color: transparent;
  opacity: 1;
}
