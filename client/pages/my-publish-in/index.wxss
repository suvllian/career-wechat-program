/* pages/my_publish_in/my_publish_in.wxss */

page {
  background-color: #f5f5f5;
  width: 100%;
  height: 100%;
}

.applebox:hover {
  -webkit-box-shadow: 0 15px 30px rgba(0, 0, 0, 0.1);
  box-shadow: 0 15px 30px rgba(0, 0, 0, 0.1);
  -webkit-transform: translate3d(0, -2px, 0);
  transform: translate3d(0, -2pxs, 0);
}

.applebox {
  background-color: #fff;
  transition: all 0.3s linear;
  height: auto;
  width: 95%;
  margin: auto;
  margin-top: 20rpx;
  border: 1px solid transparent;
  border-radius: 5rpx;
  box-shadow: 3px 3px 3px rgba(0, 0, 0, 0.1);
  margin-bottom: 30rpx;
}

.col {
  width: 100%;
}

#body {
  width: 100%;
  min-height: 600rpx;
  padding: 50rpx 0;
}

.sub {
  margin: auto;
  display: block;
  padding: 50rpx 30rpx 50rpx 30rpx;
}

.title {
  font-size: 32rpx;
}

.h1 {
  font-size: 43rpx;
  font-weight: 500;
  margin-left: 20rpx;
}

.fix {
  position: fixed;
  bottom: 20rpx;
  right: 20rpx;
}

.publish {
  width: 80rpx;
  height: 80rpx;
}
.bg{
  overflow:hidden;
  height:1040rpx;
}
.bg image{
  width:100%;
  height:1200rpx;
}