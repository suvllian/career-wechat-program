/* pages/Career_details/Career_details.wxss */
page{
height: 100%;
width:100%;
background-color:#F5F5F5;
}
.top image{
  width: 100%;
  height: 500rpx;
}
.main{
  margin: 30rpx 50rpx 100rpx 50rpx;

}
.title{
  font-size: 35rpx;
  color:#ff7f0f;
  font-weight: bold;
}
.hr{
  border: 1rpx solid #ff7f0f;
  margin-top: 20rpx;
  margin-bottom: 5rpx;
}
.icon image{
  width: 55rpx;
  height: 55rpx;
  position: absolute;
  right: 50rpx;
}
.block{
  display: flex;
  flex-direction: row;
  margin-top: 20rpx;
}
.text_info{
  flex-direction: row;
  margin-top: 20rpx;
}
.text_info{
font-size: 28rpx;
text-indent: 2em;
line-height: 45rpx;
}
.box{
display: flex;
flex-direction: row;
margin-top: 20rpx;
}
.left image{
width: 200rpx;
height: 200rpx;
}
.right{
display: flex;
flex-direction: column;
font-size: 28rpx;
margin-left: 50rpx;
}
.name{
  padding-top:25rpx;
}
.p_name{
  padding-top:25rpx;
}
.pover{
  padding-top:25rpx;
}
.bottom{
  position: fixed;
  bottom: 0rpx;
  height: auto;
  width: 100%;
}
.bottom_info image{
  width: 60rpx;
  height: 60rpx;
  float: right;
  margin: 0rpx 25rpx 25rpx 0;
}
