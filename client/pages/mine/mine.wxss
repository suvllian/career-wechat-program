/* pages/mine/mine.wxss */
.text-center{
  text-align:center;
  display: block;
  font-size:32rpx;
}
#usr_mess{
  width:100%;
  padding:50rpx 0;
  color:#000;
  background-color:#fff;
 overflow:hidden;
 font-weight:bold;
}
.avatar{
  width:150rpx;
  height:150rpx;
  border-radius:50%;
  margin:auto;
  display:block;
}
.usr_name{
  width:150rpx;
  font-family: "MICROSOFTYAHEI";
  margin:auto;
  display:block;
  text-align:center;
  margin-top:20rpx;
}
.body{
  background-color:#F4F5F5;
}
.left{
  float:left;
}
.right{
  float:right;
}
.clear::after{
  content:'';
  display:table;
  clear:both;
}
.odd{
 background-color:#fff;
  margin:20rpx auto 0;
  padding:50rpx 50rpx;
  border-bottom:2rpx solid #F4F5F5; 
  cursor:pointer;
}
.even{
  background-color:#fff;
  margin:auto;
  padding:50rpx 50rpx;
   cursor:pointer;
}
.dd{
  width:50rpx;
  height:50rpx;
  vertical-align:middle;
}
.person_mes{
  color:#000;
  margin-left:20rpx;
}
.person_mes_num{
  margin-right:30rpx;
}
.modal_box{
   position:fixed;
   top:0;
  width:100%;
  height:100%;
  background-color:rgba(0,0,0,.3);
}
.modal{
  width:500rpx;
  margin-left:-250rpx;
  background-color:#fff;
  margin-top:-250rpx;
  height:500rpx;
  position:absolute;
  left:50%;
  top:50%;
  border-radius:5rpx;
}
#commend{
  display:block;
  text-align:center;
  font-size:40rpx;
  font-weight:600;
 
}
.words{
  color:#BFBEC3;
  margin-top:20rpx;
  display:block;
  text-align:center;
  font-size:32rpx;
}
