/* pages/discuss/discuss.wxss */
/* 背景 */
#body{
  background-color:#fff;
}
/*讨论区标题  */
.head{
  padding:30rpx;
  background-color:#2AB5EC;
  color:#fff;
}
.text-center{
  text-align:center;
  display: block;
  font-size:32rpx;
}
/*用户讨论一栏  */
[class^="Fuser"]{
  padding:25rpx;
  overflow:hidden;
  border:2rpx solid #F9F9FB;
  border-radius:4rpx;
}
[class^="Fuser"]:hover{
   box-shadow: 1px 3px 9px #ccc;
}
/* 用户头像 */
.avatar{
  width:150rpx;
  height:150rpx;
  border-radius:50%;
  background-color:#fff;
  float:left;
}
/* 用户姓名 */
.user_name{
  color:#000;
  font-weight: bold;
  font-size:34rpx;
  margin-left:20rpx;
}
/*用户评论  */
.user_comment{
  display:block;
  text-indent:2em;
  font-size:32rpx;
  font-weight:500;
  width:70%;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  margin-left:20rpx;
  padding-left:20rpx;
  padding-top:5rpx;
}
.content_us{
  overflow:hidden;
}
/*点赞回复等  */
.box{
  width:52%;
  margin: 20rpx auto 0;
}
.d_zan{
  width:40rpx;
  height:40rpx;
  vertical-align:text-bottom;
}
.anwser::before{
  content:'·';
  font-size:40rpx;
  color:#A2A1A4;
  margin-left:20rpx;
  margin-right:20rpx;
  line-height:40rpx;
}
.anwser::after{
  content:'·';
  font-size:40rpx;
  color:#A2A1A4;
  margin-left:20rpx;
  margin-right:20rpx;
}
.anwser{
  color:#A2A1A4;
  font-size:30rpx;
  line-height:40rpx;
  cursor: pointer;
}
.time{
    color:#A2A1A4;
    font-size:26rpx;
    line-height:40rpx;
}
.modal_box{
   position:fixed;
   top:0;
  width:100%;
  height:100%;
  background-color:rgba(0,0,0,.3);
}
.modal{
  width:500rpx;
  margin-left:-250rpx;
  background-color:#fff;
  margin-top:-250rpx;
  height:500rpx;
  position:absolute;
  left:50%;
  top:50%;
}
#commend{
  display:block;
  text-align:center;
  font-size:40rpx;
  font-weight:600;
}
.words{
  color:#BFBEC3;
  margin-top:20rpx;
  display:block;
  text-align:center;
  font-size:32rpx;
}