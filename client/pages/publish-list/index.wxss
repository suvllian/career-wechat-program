page {
  height: 100%;
  background-color: #f5f5f5;
}

#box {
  padding: 20rpx 20rpx;
  overflow: hidden;
}

.career-panel {
  background-color: #fff;
  width: 90%;
  margin: 0 auto 20rpx;
  padding: 20rpx;
  border-radius: 5rpx;
  box-shadow: 0px 0px 2px 0px #999;
}

.panel-title {
  display: block;
  font-size: 25rpx;
  font-family: "MICROSOFTYAHEI";
  color: grey;
  border-bottom: 4rpx solid #f5f5f5;
  padding: 0 20rpx 20rpx 0;
}

.content {
  font-size: 30rpx;
  font-weight: bold;
  padding: 20rpx 0;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.content::after {
  display: block;
}

.content-info {
  display: flex;
  flex-direction: row;
  border-bottom: 4rpx solid #f5f5f5;
}

.info {
  font-size: 25rpx;
  font-weight: 400;
  padding-bottom: 20rpx;
  color: grey;
  width: 450rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.right {
  position: relative;
  font-size: 30rpx;
  padding-left: 80rpx;
  top: -25rpx;
}

/* 提示的三个颜色 */

.info-success {
  color: green;
}

.info-pro {
  color: blue;
}

.info-failed {
  color: Red;
}

.time {
  font-size: 25rpx;
  text-align: right;
  display: block;
  margin-top: 20rpx;
  color: grey;
}

.submit {
  width: 130rpx;
  background-color: #11b4af;
  color: #fff;
  font-size: 20rpx;
  position: absolute;
  right: 37rpx;
  margin-top: 10rpx;
  border-radius: 10rpx 0 0 10rpx;
  border: 0rpx solid black;
}

.bottom_info {
  display: flex;
  flex-direction: row;
}

.add-btn {
  position: fixed;
  bottom: 20rpx;
  right: 28rpx;
}

.add-btn image {
  width: 70rpx;
  height: 70rpx;
  background-color:#11B4AF;
  border-radius: 50%;
   padding:5rpx;
}

.bg{
  overflow:hidden;
  height:1040rpx;
}
.bg image{
  width:100%;
  height:1200rpx;
}