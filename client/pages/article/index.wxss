page {
  height: 100%;
  background-color: #f5f5f5;
}

.article-container {
  width: 86%;
  margin: 20rpx auto 30rpx;
  padding: 30rpx;
  font-size: 30rpx;
  border: 1px solid transparent;
  border-radius: 10rpx;
  background-color: #fff;
  box-shadow: 3px 3px 3px rgba(0, 0, 0, 0.1);
}

.article-title {
  padding-bottom: 40rpx;
  border-bottom: 1rpx solid #eee;
  font-size: 36rpx;
}

.article-content {
  min-height: 300rpx;
  padding: 30rpx 0;
}

.article-info {
  padding-top: 30rpx;
  border-top: 1rpx solid #eee;
  font-size: 22rpx;
}

.gap-line {
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  font-size: 32rpx;
}

.gap-text {
  display: inline-block;
  padding-bottom: 10rpx;
  border-bottom: 4rpx solid #ccc;
}

.discuss-area {
  width: 86%;
  margin: 40rpx auto 40rpx;
  padding: 30rpx;
  border-radius: 10rpx;
  background-color: #fff;
}

.discuss-count {
  font-size: 26rpx;
}

.discuss-content {
  height: 100rpx;
  margin: 30rpx auto;
  padding: 20rpx;
  border-radius: 3px;
  font-size: 26rpx;
  color: #fff;
  background-color: #eee;
}

.submit {
  background-color: #282828;
  color: white;
  width: 130rpx;
  height: 62rpx;
  padding: 0rpx auto;
  margin-right: 0;
  font-size: 24rpx;
  line-height: 62rpx;
}

.discuss-contents {
  margin-top: 40rpx;
}

.main_top {
  display: flex;
  flex-direction: row;
}

.top_left image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50rpx;
}

.answer_hr {
  border: 2rpx solid #f5f5f5;
  margin: 40rpx 40rpx 40rpx 40rpx;
}

.top_right {
  font-size: 30rpx;
  margin-left: 30rpx;
  padding-top: 5rpx;
}

.content_time {
  padding-top: 20rpx;
  color: #878787;
}

.tanchu {
  position: absolute;
  right: 80rpx;
  font-size: 30rpx;
  cursor: pointer;
}

.content_info {
  font-size: 30rpx;
  margin-left: 130rpx;
  margin-top: 15rpx;
  margin-bottom: 20rpx;
}

.Sub_comments {
  height: auto;
  background-color: #f5f5f5;
  margin-left: 130rpx;
  margin-right: 40rpx;
  padding: 20rpx;
  font-size: 25rpx;
}

.sub_info {
  color: #9b9b9b;
}

.content_hr {
  border: 2rpx solid #f5f5f5;
  margin: 40rpx;
}

.modal_box {
  position: fixed;
  top: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.3);
}

.modal {
  width: 500rpx;
  margin-left: -250rpx;
  background-color: #fff;
  margin-top: -250rpx;
  height: 500rpx;
  position: absolute;
  left: 50%;
  top: 50%;
}

#commend {
  display: block;
  text-align: center;
  font-size: 40rpx;
  font-weight: 600;
}

.words {
  color: #bfbec3;
  margin-top: 20rpx;
  display: block;
  text-align: center;
  font-size: 32rpx;
}
